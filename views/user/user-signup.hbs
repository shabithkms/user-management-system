<div class="limiter">
    <div class="container-login100">

        <div class="wrap-login100">




            <form action="/signup" method="post" id="signup-form">
                <center>
                    <legend class=" pb-3">Create Account</legend>
                </center>


                <div class="form-group">
                    <label for="first_name">Name</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Full Name" maxlength="20" minlength="4" required>
                </div>



                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email Address" required>
                </div>
                

                <div class="form-group">
                    <label for="pw">Password</label>
                    <input type="password" class="form-control" name="pw" placeholder="Password" minlength="6"  id="pw" required>

                </div>
                {{#if emailErr}}
                <h6 class="font pb-3" style="color: red;">This email is already taken</h6>
                {{/if}}



                <center><button type="submit" class="btn ">Signup</button><br>
                    {{#if signup}}
                    <a href="/login" class="  " style="text-decoration: none;">Already have an account?</a>
                    {{else}}
                    <a href="/signup" class="  pt-4  " style="text-decoration: none;">Create an account</a>

                    {{/if}}
                </center>
            </form>
        </div>
    </div>
</div>



