<section class="" style="padding-top: 5em; d-flex">
  <div class="container col-md-12 col-lg-12 d-flex justify-content-center">
    <table class="table table-striped table-bordered " cellspacing="0" id="userTable">
      <thead>
        <tr>
          {{!-- <th scope="col">#</th> --}}
          <th scope="col">No</th>
          <th scope="col">Full Name</th>
          <th scope="col">Email </th>
          <th scope="col">Status </th>
          {{!-- <th scope="col">Password</th> --}}
          <th scope="col">Options</th>

        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>

          <td></td>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>

          <td>{{this.status}}</td>




          <td>
            <div class="d-flex">
              <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary adminButtons" style="width: 80px;">Edit</a>

              {{!-- <a href="/admin/delete-user/{{this._id}}" id="updateUser" class="btn btn-danger ml-2 adminButtons"
                onclick="return confirm('Are you want to delete {{this.name}}?')" style="width: 80px;">Delete</a> --}}
              {{!-- <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger ml-2 adminButtons"
                onclick=" deleteUser('{{this._id}}')" style="width: 80px;">Delete</a> --}}

              <!-- Button trigger modal -->
              <button type="button" class="btn btn-danger adminButtons" data-toggle="modal"
                data-target="#exampleModalCenter">
                Delete
              </button>

              <!-- Modal -->
              <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">Do you want to delete {{this.name}}?</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <p>
                        <h6>Once deleted, you will not be able to recover this User!</h6>
                      </p>
                    </div>
                    <div class="modal-footer">
                      <a href="/admin">
                        <button type="button" class="btn btn-warning">Cancel</button>
                      </a>
                      <a href="/admin/delete-user/{{this._id}}">
                        <button type="button" class="btn btn-danger">Delete</button>
                      </a>
                    </div>
                  </div>
                </div>
              </div>


            </div>


          </td>

        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>